<%= form_with model:@user, local:true do |f|%>
    <div class="field">
	    <%= f.label :name, "name" %>
        <%= f.text_field :name, value:@user.name %>
    </div>
    <div class="field">
        <%= f.label :profile_image, "Image" %>
        <%= f.attachment_field :profile_image %>
    </div>
    <div class="field">
        <%= f.label :introduction "Introduction" %>
        <%= f.text_area :introduction %>
    </div>
    <div class="actions">
        <%= f.submit 'Update User'%>
    </div>
    <%if @user.present? %>
        <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |message| %>
                <div class="field">
                    <p><%= message %> error</p>
                </div>
            <% end %>
        <% end %>  
    <% end %> 
<% end %>